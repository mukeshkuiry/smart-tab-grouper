{
  "name": "Smart Tab Grouper",
  "description": "Automatically groups Chrome tabs by hostname",
  "version": "2.0.0",
  "manifest_version": 3,

  "permissions": ["tabs", "tabGroups", "storage"],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup/popup.html"
  },

  "commands": {
    "group-all-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Group all tabs by hostname"
    },
    "ungroup-all-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Ungroup all tabs"
    },
    "group-ungrouped-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Group only ungrouped tabs"
    }
  },

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
